@page
@model MoviesApp.Pages.MoviesModel
@{
}


<h3>@ViewData["Title"]</h3>
<hr />

<table class="table table-striped">
    <thread>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Rate</th>
            <th scope="col">Ations</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var _movie in Model.Movies)
        {
        <tr>
            <th scope="row">@_movie.Id</th>
            <td>@_movie.Title</td>
            <td>@_movie.Rate</td>
            <td><a href="/Movie/@_movie.Id" class="btn btn-secondary">Show details</a></td>
        </tr>
        }       

   
        </tbody>

        <div style="position: fixed; bottom: 70px; right: 25px;">
            <a href="/AddMovie" class="btn btn-success">Add new</a>
        </div>
    </table> 